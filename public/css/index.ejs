<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Set height of the content area */
        .content {
            min-height: calc(100vh - 56px); /* Adjust based on your navbar height */
            /* 56px is the default height of the navbar in Bootstrap */
        }
    </style>
</head>

<body>
    <div class="container-fluid content">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-2 bg-dark text-light">
                <h3>Sidebar</h3>
                <!-- Sidebar content goes here -->
            </div>
            <!-- Content -->
            <div class="col-8">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="card">
                                <div class="card-header">
                                    Card Header 1
                                </div>
                                <div class="card-body">
                                    <p>Card Content 1</p>
                                </div>
                            </div>
                        </div>
                        <!-- Repeat for other cards -->
                        <div class="carousel-item">
                            <div class="card">
                                <div class="card-header">
                                    Card Header 2
                                </div>
                                <div class="card-body">
                                    <p>Card Content 2</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

        </div>
    </div>

        <!-- Footer -->
        <div class="col-2 bg-dark text-light fixed-bottom">
            <h3>Footer</h3>
            <!-- Footer content goes here -->
        </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
